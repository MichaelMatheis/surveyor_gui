<!-- Tack a number onto questions, e.g. "3) What is your name?" but don't do it for labels -->
<% if question_type.id != :label -%>

    <span class='question-number'> <%= "#{@question_no.to_s} )" %></span>
    <% if question.is_a? Question %>
        <div class="question-text actual-question" data-question-id=<%=question.id %>><%= text.to_s.html_safe %> </div>
    <% else %>
        <div class="question-text"><%= text.to_s.html_safe %> </div>
    <% end %>
<% end %>