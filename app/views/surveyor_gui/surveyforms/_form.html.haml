#survey
  %h1
    = @title
    - if @surveyform.id
      %input.btn.btn-info{:onclick => "preview_cbox('#{surveyor_gui.survey_url(@surveyform.id)}',
          #{@surveyform.id});", :type => "button", :value => "Preview Survey"}/
      %input.btn.btn-info{:onclick => "preview_cbox('#{surveyor_gui.preview_response_url(@surveyform.id)}',
          #{@surveyform.id});", :type => "button", :value => "Preview Response"}/
      %input.btn.btn-info{:onclick => "preview_cbox('#{surveyor_gui.preview_report_url(@surveyform.id)}',
          #{@surveyform.id});", :type => "button", :value => "Preview Report"}/

  = simple_form_for [surveyor_gui, @surveyform] do |f|
    = f.error_messages
    %br/

    - if params[:action] == "show"
      %h3
        = @surveyform.title
        = link_to "Edit", edit_surveyform_path(@surveyform.id), class: "btn-sm btn-primary"
        = link_to "View All", surveyforms_path, class: "btn-sm btn-link"
    - else
      = f.hidden_field :id
      = f.label :title, :required => false,  :style => 'font-size: 150%;'
      = f.input :title, :input_html => { :size => '35', :style=>'margin-top: 0.5%; font-size: 110%; float:left;'}, :required=>false , :label=>false
      = f.input :template, :disabled=>@survey_locked, :label => false, :input_html=>{:style=>"float:right;"}
      = link_to "Show", surveyor_gui.surveyform_path(@surveyform), class: "btn-sm btn-primary"
      = link_to "View All", surveyor_gui.surveyforms_path, class: "btn-sm btn-link"

    %span{:style => "position:relative; float: right;"}
      Template?Â 

    .sortable_sections{"data-survey_locked" => @survey_locked}
      = render "survey_section_fields", :s => builder , :f => f

    - if @survey_locked
      %p
        %button.go_back.btn-sm.btn-primary{:type => "button"} Go Back
    - else
      %p= f.button :submit, 'Save Changes', class: "btn-sm btn-primary"

:javascript
  function preview_cbox(url, id) {
    $.colorbox({width:"90%",
                height:"90%",
                scrolling:true,
                iframe:true,
                href: url + '?suppress_header=true&survey_id='+ id,
                opacity:.3});
  }