= f.simple_fields_for :dependency do |d|
  = d.hidden_field :question_id
  = d.hidden_field :question_group_id
  = d.hidden_field :rule
  %div
    Show the question, "#{@this_question}", when the following conditions are true:
    %br/
    %br/
    %table
      %thead
        %tr
          %td Question
          %td Condition
          %td Answer
      %tbody#dependency_conditions_partial{"data-dependency_id" => "#{d.object.id.to_s}", "data-question_id" => "#{@question.id.to_s}"}
    %p.floatdown2.add_condition
      Add a Condition #{image_tag 'addicon.png', :border => 0}
%br/
%br/
= f.button :submit,  'Save Changes',  :id=>'dependency_submit'