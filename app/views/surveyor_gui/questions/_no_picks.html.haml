  %table.table{style: 'max-width: 40%'}
    %tr
      %td
        %strong Number Prefix
      %td
        %strong  Number Suffix
      %td
        %strong  Shown as
    %tr
      %td $
      %td USD
      %td $60 USD
    %tr
      %td
