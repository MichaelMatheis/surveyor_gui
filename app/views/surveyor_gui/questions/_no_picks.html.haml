%hr

= simple_fields_for 'question', @questions do |f|

  .row
    .col-md-2
      = f.input :prefix, :label => "Number Prefix"
    .col-md-2
      = f.input :suffix, :label => "Number Suffix"

  = f.simple_fields_for :answers, @questions.answers.first do |a|
    = a.hidden_field :text
%br/
